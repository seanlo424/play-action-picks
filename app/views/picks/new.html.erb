<br />
<div class="booyah-box col-10 offset-1 text-center">
	<h1>Punt or Pick</h1>

	<a1>Matchup</a1>

<br />

<%= link_to 'Punt My Picks', new_pick_path, class: 'btn btn-success' %>
<br />

<table class="pickemTable base auto noSwipe">
	<thead>
		<tr>

		<div id='pickem-pick'>
	 	 <a2>Team 1</a2>
  		<input type="radio" name='team' id="box0" checked />
		</div>
	</tr>
</thead>
<br />
<tr>
	<div id='pickem-pick'>
		<a2>Team 2</a2>
		<input type="radio" name='team' id="box0" checked />
  </div>
</thead>
  <br />
  
		<%= link_to 'Save Picks', new_pick_path, class: 'btn btn-success' %>
	<br />

	<% @new_picks.each do |pick| %>
		<% simple_form_for(pick) do |f| %>
			<%= f.input :team, as: :radio_buttons, collection: [pick.game.home_team, pick.game.away_team] %>
			<%= f.button :submit %>
		<% end %>
	<% end %>


</div>

